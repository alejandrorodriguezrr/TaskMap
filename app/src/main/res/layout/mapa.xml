<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantalla_mapa"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarMapa"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2563EB"
                android:title="Detalle"
                android:titleTextColor="@android:color/white"
                app:titleCentered="true"
                app:navigationIcon="@android:drawable/ic_media_previous"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" />
        </com.google.android.material.appbar.AppBarLayout>


        <!-- Contenedor del mapa -->
        <fragment
            android:id="@+id/fragmentMapa"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />


        <!-- Panel inferior estilo prototipo -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardPanelMapa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            app:strokeColor="#11000000"
            app:strokeWidth="1dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="14dp">

                <TextView
                    android:id="@+id/tvInfoMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selecciona una ubicación"
                    android:textColor="#111827"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvDireccionMapa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Dirección: --"
                    android:textColor="#6B7280"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnConfirmarUbicacion"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_weight="1"
                        android:text="Confirmar ubicación"
                        android:textStyle="bold"
                        app:cornerRadius="14dp"
                        app:backgroundTint="#2563EB" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelarMapa"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textStyle="bold"
                        android:textColor="#111827"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="14dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
