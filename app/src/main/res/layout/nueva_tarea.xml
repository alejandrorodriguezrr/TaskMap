<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantalla_nueva_tarea"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.06"
        android:scaleType="centerCrop"
        android:src="@drawable/logotaskmap" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_sombra" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarNuevaTarea"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#2563EB"
                android:title="Nueva tarea"
                android:titleTextColor="@android:color/white"
                app:titleCentered="true"
                app:navigationIcon="@android:drawable/ic_media_previous"
                app:navigationIconTint="@android:color/white"
                app:contentInsetStartWithNavigation="12dp" />
        </com.google.android.material.appbar.AppBarLayout>

        <!-- HOJA BLANCA -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardHojaFormulario"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="14dp"
            android:layout_marginEnd="14dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:cardBackgroundColor="@android:color/white"
            app:cardCornerRadius="22dp"
            app:cardElevation="14dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Scroll SOLO para el formulario -->
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:fillViewport="true"
                    android:overScrollMode="never"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Detalles de la tarea"
                            android:textColor="#111827"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Completa los campos para crear tu recordatorio."
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="12dp" />

                        <!-- TÍTULO -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilTituloTarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Título"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="#9CA3AF"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etTituloTarea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:singleLine="true" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- DESCRIPCIÓN -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/tilDescripcionTarea"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:hint="Descripción"
                            app:boxBackgroundMode="outline"
                            app:boxStrokeColor="#9CA3AF"
                            app:boxStrokeWidth="1dp"
                            app:boxStrokeWidthFocused="2dp"
                            app:boxCornerRadiusTopStart="16dp"
                            app:boxCornerRadiusTopEnd="16dp"
                            app:boxCornerRadiusBottomStart="16dp"
                            app:boxCornerRadiusBottomEnd="16dp">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/etDescripcionTarea"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="textMultiLine"
                                android:minLines="3" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- PRIORIDAD + ESTADO -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilPrioridadTarea"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Prioridad"
                                app:endIconMode="dropdown_menu"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#9CA3AF"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="2dp"
                                app:boxCornerRadiusTopStart="16dp"
                                app:boxCornerRadiusTopEnd="16dp"
                                app:boxCornerRadiusBottomStart="16dp"
                                app:boxCornerRadiusBottomEnd="16dp">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/actPrioridadTarea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilEstadoTarea"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:hint="Estado"
                                app:endIconMode="dropdown_menu"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#9CA3AF"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="2dp"
                                app:boxCornerRadiusTopStart="16dp"
                                app:boxCornerRadiusTopEnd="16dp"
                                app:boxCornerRadiusBottomStart="16dp"
                                app:boxCornerRadiusBottomEnd="16dp">

                                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                                    android:id="@+id/actEstadoTarea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- FECHA / HORA -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilFechaTarea"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:hint="Fecha"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#9CA3AF"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="2dp"
                                app:boxCornerRadiusTopStart="16dp"
                                app:boxCornerRadiusTopEnd="16dp"
                                app:boxCornerRadiusBottomStart="16dp"
                                app:boxCornerRadiusBottomEnd="16dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etFechaTarea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <com.google.android.material.textfield.TextInputLayout
                                android:id="@+id/tilHoraTarea"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:hint="Hora"
                                app:boxBackgroundMode="outline"
                                app:boxStrokeColor="#9CA3AF"
                                app:boxStrokeWidth="1dp"
                                app:boxStrokeWidthFocused="2dp"
                                app:boxCornerRadiusTopStart="16dp"
                                app:boxCornerRadiusTopEnd="16dp"
                                app:boxCornerRadiusBottomStart="16dp"
                                app:boxCornerRadiusBottomEnd="16dp">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/etHoraTarea"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="true"
                                    android:focusable="false"
                                    android:inputType="none" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <!-- UBICACIÓN -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            app:cardCornerRadius="16dp"
                            app:cardElevation="0dp"
                            app:strokeColor="#E5E7EB"
                            app:strokeWidth="1dp"
                            app:cardBackgroundColor="@android:color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Ubicación"
                                    android:textColor="#111827"
                                    android:textStyle="bold"
                                    android:textSize="14sp" />

                                <TextView
                                    android:id="@+id/tvUbicacionSeleccionada"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="Sin ubicación"
                                    android:textColor="#6B7280"
                                    android:textSize="13sp" />

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btnCambiarEnMapa"
                                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                    android:layout_width="match_parent"
                                    android:layout_height="44dp"
                                    android:layout_marginTop="10dp"
                                    android:text="ELEGIR EN EL MAPA"
                                    android:textStyle="bold"
                                    android:textColor="#111827"
                                    android:backgroundTint="@android:color/white"
                                    app:cornerRadius="14dp"
                                    app:strokeColor="#E5E7EB"
                                    app:strokeWidth="1dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="10dp" />

                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>

                <!-- Barra fija de acciones -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnGuardarTarea"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_weight="1"
                        android:text="Guardar"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@android:color/white"
                        app:cornerRadius="16dp"
                        app:backgroundTint="#2563EB" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelarTarea"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="52dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="Cancelar"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#111827"
                        app:cornerRadius="16dp"
                        app:strokeColor="#E5E7EB"
                        app:strokeWidth="1dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
