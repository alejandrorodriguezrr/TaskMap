<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pantalla_principal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Fondo suave -->
    <ImageView
        android:id="@+id/ivFondoPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.08"
        android:scaleType="centerCrop"
        android:src="@drawable/logotaskmap" />

    <!-- Capa para dar contraste -->
    <View
        android:id="@+id/vSombraPrincipal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_login_sombra" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Barra superior -->
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbarPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                android:background="#2563EB"
                android:title="Task Map"
                android:titleTextColor="@android:color/white"
                app:titleCentered="true"/>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scrollPrincipal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:padding="16dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- CARD: RESUMEN -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardResumen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="#11000000"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvTituloResumen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Resumen"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSubResumen"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Estado general de tus tareas"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <!-- Pendientes -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_menu_agenda"/>

                            <TextView
                                android:id="@+id/tvPendientesLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Pendientes"
                                android:textColor="#111827"
                                android:textSize="14sp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipPendientes"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                app:chipBackgroundColor="#E0EAFF"
                                app:chipCornerRadius="12dp" />
                        </LinearLayout>

                        <!-- En progreso -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/ic_popup_sync"/>

                            <TextView
                                android:id="@+id/tvEnProgresoLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="En progreso"
                                android:textColor="#111827"
                                android:textSize="14sp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipEnProgreso"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                app:chipBackgroundColor="#FEF3C7"
                                app:chipCornerRadius="12dp" />
                        </LinearLayout>

                        <!-- Hechas -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@android:drawable/checkbox_on_background"/>

                            <TextView
                                android:id="@+id/tvHechasLabel"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Hechas"
                                android:textColor="#111827"
                                android:textSize="14sp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipHechas"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                app:chipBackgroundColor="#D1FAE5"
                                app:chipCornerRadius="12dp" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD: ACCESOS RÁPIDOS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAccesos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="#11000000"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvAccesosRapidos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Accesos rápidos"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:orientation="horizontal">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnVerTareas"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_weight="1"
                                android:text="Ver tareas"
                                android:textStyle="bold"
                                app:backgroundTint="#2563EB"
                                app:cornerRadius="14dp"
                                app:icon="@android:drawable/ic_menu_agenda"
                                app:iconPadding="10dp"
                                app:iconTint="@android:color/white" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnVerMapa"
                                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                                android:layout_width="0dp"
                                android:layout_height="44dp"
                                android:layout_marginStart="10dp"
                                android:layout_weight="1"
                                android:text="Ver mapa"
                                android:textColor="#111827"
                                android:textStyle="bold"
                                android:backgroundTint="@android:color/white"
                                app:cornerRadius="14dp"
                                app:strokeColor="#E5E7EB"
                                app:strokeWidth="1dp"
                                app:icon="@android:drawable/ic_menu_mapmode"
                                app:iconPadding="10dp"
                                app:iconTint="#111827" />
                        </LinearLayout>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CARD: PRÓXIMAS TAREAS -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardProximasTareas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="10dp"
                    app:cardUseCompatPadding="true"
                    app:strokeColor="#11000000"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvTituloProximas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Próximas tareas"
                            android:textColor="#111827"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvSubProximas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Las tareas con fecha más cercana"
                            android:textColor="#6B7280"
                            android:textSize="13sp" />

                        <!-- Lista -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvProximasTareas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:overScrollMode="never" />

                        <!-- Texto cuando no haya tareas -->
                        <TextView
                            android:id="@+id/tvVacioProximas"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:paddingVertical="14dp"
                            android:text="No hay tareas próximas"
                            android:textColor="#9CA3AF"
                            android:textSize="13sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Botón inferior (como prototipo) -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNuevaTarea"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:text="+ Nueva tarea"
                    android:textStyle="bold"
                    app:backgroundTint="#2563EB"
                    app:cornerRadius="14dp"
                    app:icon="@android:drawable/ic_input_add"
                    app:iconPadding="10dp"
                    app:iconTint="@android:color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="14dp" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</FrameLayout>
